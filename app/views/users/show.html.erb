<p id="notice"><%= notice %></p>

<p>
  <b>Last Name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>First Name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Type:</b>
  <%= @user.user_type %>
</p>

<p>
  <b>Photos</b>
</p>

<% @activities.each do |activity| %>
  <% activity.photos.each do |photo| %>
    <td><%= image_tag photo.photo.url(:medium) %></td>
    <td><%= link_to 'Show', photo %></td>
  <% end %>
<% end %>

<br />

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
