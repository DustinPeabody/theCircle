<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "The Circle" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%#= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <div>
		     <nav class="navbar-inner">
		        <div class="container">
		          <center>
			          <div id="user_nav">
			            <% if current_user %>
			                Signed in as <strong><%= current_user.first_name %></strong>!
			                <%= link_to "Sign out", signout_path, id: "sign_out" %>
			            <% else %>
			              <%= form_tag :controller => 'welcome', :action => 'auth', :method => 'get' do %>
			                <%= text_field_tag(:email) %>
			              <%#= link_to "Sign in with Facebook", "/welcome/auth", id: "sign_in" %>
			                <%= submit_tag("Email") %>
			              <% end %>
			            <% end %>
			          </div>
			          <%# render 'layouts/navigation' %>
		          </center>
		        </div>
		      </nav>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
