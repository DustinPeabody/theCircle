<table class="event_headline">
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.location.name if event.location%></td>
    </tr>
  <% end %>
</table>
    